
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ResultPickActivity"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout_Title">

        <TextView
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:id="@+id/textView_RouteTitle"
            android:text="City_Title"
            android:textSize="30sp"
            android:paddingTop="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="return"
            android:onClick="ReturnToPrevView"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/GridLayout_Desc"
        android:columnCount="2"
        android:rowCount="3">

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:text="descrition_of_the_city"
            android:id="@+id/textView_Desc"
            android:layout_row="1"
            android:layout_column="1"/>

    </GridLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/RoutesListview">

    </ListView>



</LinearLayout>
